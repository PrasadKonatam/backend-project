<h1 style="text-align: center">Sign In</h1>
<form
  action="/user/create-session"
  method="post"
  style="max-width: 300px; margin: 0 auto"
>
  <input
    type="email"
    name="email"
    placeholder="Enter email"
    required
    style="width: 100%; padding: 10px; margin-bottom: 10px"
  />
  <input
    type="password"
    name="password"
    placeholder="Enter password"
    required
    style="width: 100%; padding: 10px; margin-bottom: 10px"
  />
  <input
    type="submit"
    value="Sign In"
    style="
      width: 100%;
      padding: 10px;
      background-color: #4caf50;
      color: white;
      border: none;
      cursor: pointer;
    "
  />
</form>
